{
  "name": "markdown-blog",
  "version": "1.0.0",
  "description": "A simple static blog generator using Markdown",
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./public/styles/tailwind.css --watch",
    "build:full": "npm run build:css && node build.js",
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.0",
    "handlebars": "^4.7.7",
    "highlight.js": "^11.11.1",
    "markdown-it": "^13.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.18",
    "autoprefixer": "^10.4.21",
    "nodemon": "^2.0.20",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.13"
  },
  "keywords": [
    "markdown",
    "blog",
    "static"
  ],
